name: CodeQL Analysis - Pico Source
on: push

permissions:
    security-events: write
    contents: read

jobs:
    analyze_pico:
        name: Pico CodeQL
        needs: analyze_uros
        uses: ./.github/workflows/analyze-pico.yml
        with:
            PICO_BUILD_SCRIPT_BRANCH: main
            FIRMWARE_PATH: pico_fw_ws
            FREERTOS_KERNEL_IMPORT: libfreertos/FreeRTOS-Kernel/portable/ThirdParty/GCC/RP2040/FreeRTOS_Kernel_import.cmake