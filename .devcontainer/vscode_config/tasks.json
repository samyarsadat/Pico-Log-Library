{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flash Target",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/cmsis-dap.cfg",
                "-f", "target/rp2040.cfg",
                "-c", "adapter speed 5000",
                "-c", "program {${command:cmake.launchTargetPath}} verify; reset; reset; exit"
            ]
        },
        {
            "label": "Reset Target",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/cmsis-dap.cfg",
                "-f", "target/rp2040.cfg",
                "-c", "adapter speed 5000",
                "-c", "init; reset run; exit"
            ]
        }
    ]
}